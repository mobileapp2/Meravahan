<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_mainlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="0dp"
    android:elevation="3dp"
    card_view:cardElevation="3dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginTop="7dp">

    <LinearLayout
        android:id="@+id/main_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toEndOf="@+id/layoutImage"
        android:layout_toRightOf="@+id/layoutImage">
        >

        <LinearLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/layoutImage"
            android:layout_toRightOf="@+id/layoutImage">

            <TextView
                android:id="@+id/tv_clientname"
                android:layout_width="280dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:layout_marginLeft="10dp"
                android:text="Text"
                android:textColor="@color/darkgrey"
                android:textSize="16dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/placeholder_bg"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="right">

                <ImageView
                    android:id="@+id/imv_call"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:src="@drawable/call"
                    android:tint="@color/black" />

                <ImageView
                    android:id="@+id/imv_sms"
                    android:layout_gravity="center_vertical"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:tint="@color/black"
                    android:src="@drawable/sms" />

                <ImageView
                    android:id="@+id/imv_whatsapp"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center_vertical"
                    android:tint="@color/black"
                    android:text="Whatsapp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimary"
                    android:src="@drawable/whatsapp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.2"
                    android:tint="@color/grey"

                    android:gravity="center"

                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>