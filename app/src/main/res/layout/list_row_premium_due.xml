<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="5dp"
    android:paddingRight="10dp"
    android:layout_margin="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <CheckBox
            android:id="@+id/cb_wish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1" />

        <TextView
            android:id="@+id/tv_vehicle_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:textAlignment="center"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:gravity="center_vertical"
            android:text="MH23AE4140"
            android:inputType="textMultiLine"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@color/colorPrimary"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/imv_test"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"
            android:tint="@color/black"
            android:src="@drawable/icon_notification"
            android:visibility="invisible"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="41dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:weightSum="1">
    <TextView
        android:id="@+id/tv_clientname"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:text="gdfffdd"
        android:textColor="@color/Gray"
        android:textStyle="bold"
        android:textSize="16sp"
        />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="41dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:weightSum="1">
        <TextView
            android:id="@+id/tv_reminder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:paddingLeft="0dp"
            android:paddingRight="5dp"
            android:text="gdfffdd"
            android:textColor="@color/grey"
            android:textSize="14sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:weightSum="1">
        <ImageView
            android:id="@+id/imv_call"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"
            android:tint="@color/black"
            android:src="@drawable/call" />

        <ImageView
            android:id="@+id/imv_sms"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="0.2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:tint="@color/black"
            android:src="@drawable/sms" />

        <ImageView
            android:id="@+id/imv_whatsapp"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"
            android:layout_marginRight="10dp"
            android:tint="@color/black"
            android:src="@drawable/whatsapp" />

        <ImageView
            android:id="@+id/imv_share"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"
            android:tint="@color/black"
            android:src="@drawable/share" />
        <ImageView
            android:id="@+id/imv_notification"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"
            android:layout_marginLeft="10dp"
            android:tint="@color/Black_Cat"
            android:src="@drawable/notification" />
    </LinearLayout>

</LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/grey" />


</LinearLayout>
