<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_mainlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="0dp"
    android:elevation="3dp"
    card_view:cardElevation="3dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginTop="7dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_gravity="center"
        android:paddingTop="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            >

        <TextView
            android:id="@+id/tv_renewaldate"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:clickable="false"
            android:text="MH23AE4140"
            android:ellipsize="end"
            android:maxLines="1"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:layout_weight="0.5"
            />

            <ImageView
                android:id="@+id/img_vehicle"
                android:layout_width="10dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:layout_weight="0.1"
                />

            <ImageView
                android:id="@+id/img_edit1"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:src="@drawable/edit"
                android:tint="@color/Gray"
                android:layout_weight="0.1"
                android:visibility="invisible"
                />
            <ImageView
                android:id="@+id/img_show"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_weight="0.1"
                android:layout_marginRight="10dp"
                android:src="@drawable/show_image"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/img_link"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:tint="@color/black"
                android:layout_weight="0.1"
                android:layout_marginRight="10dp"
                android:visibility="gone"
                />
        <ImageView
            android:id="@+id/img_edit"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:src="@drawable/edit"
            android:tint="@color/black"
            android:layout_weight="0.1"
            />

        <ImageView
            android:id="@+id/img_delete"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:tint="@color/black"
            android:src="@drawable/trash"
            android:layout_weight="0.1"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>

        <TextView
            android:id="@+id/tv_ownername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="number"
            android:clickable="false"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/grey"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="18sp"
            />
        <TextView
            android:id="@+id/tv_identify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="number"
            android:clickable="false"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/grey"
            android:paddingBottom="5dp"
            android:textSize="14sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/placeholder_bg"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            ></View>





    </LinearLayout>

</android.support.v7.widget.CardView>